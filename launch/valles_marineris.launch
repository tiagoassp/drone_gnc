<?xml version="1.0"?>

<launch>
  <arg name="gui" default="true"/>
  <arg name="world_name" default="valles_marineris"/>

  <!-- Robot pose -->
  <arg name="x" default="0"/>
  <arg name="y" default="1050"/>
  <arg name="z" default="-137.5"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="-1.57079632679489661923132169163975144209858469968755291048747229615390820314"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find tese_vmworld)/worlds/$(arg world_name).world"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <group ns="drone">
    <!-- Load URDF from the parameter server -->
    <param name="robot_description" command="cat $(find tese_vmworld)/models/drone/drone.urdf" />

    <!-- Joint State Publisher -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

    <!-- Robot State Publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <!-- Spawn Model in Gazebo -->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
          args="-param robot_description -urdf -model drone -x $(arg x) -y $(arg y) -z $(arg z)
                -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" />

  </group>
</launch>
